@model EgiTrails.Models.Veiculos

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>Tem a certeza que deseja eliminar este item?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Modelo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Modelo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumLugares)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumLugares)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Desativo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Desativo)
        </dd>

        <div class="col-2">
            @if (Model.Photo != null)
            {
                <img style="height:350px; width:350px;" class="img-responsive full-width" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Photo)" />
            }
        </div>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="VeiculosId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Retroceder</a>
    </form>
</div>
