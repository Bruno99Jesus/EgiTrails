@model EgiTrails.Models.Veiculos

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Veiculos</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Modelo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Modelo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NumLugares)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumLugares)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Desativo)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Desativo == "Não")
            {
                <span class="text-success">@Html.DisplayFor(model => model.Desativo)</span>
            }
            else
            {
                <span class="text-danger">@Html.DisplayFor(model => model.Desativo)</span>
            }
            
        </dd>

        <div class="col-2">
            @if (Model.Photo != null)
            {
                <img style="height:450px; width:450px;" class="img-responsive full-width" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Photo)" />
            }
        </div>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.VeiculosId">Editar</a> |
    <a asp-action="Index">Retroceder</a>
</div>
