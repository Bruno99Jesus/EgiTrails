@model IEnumerable<EgiTrails.Models.Trilhos>

@{
    ViewData["Title"] = "Index";
}

<section id="portfolio" class="portfolio section-bg">
    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="section-title">
            <h2>Os nossos Trilhos</h2>
            <p>Dê uma vista de olhos aos nossos trilhos</p>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <ul id="portfolio-flters">
                    <li data-filter="*" class="filter-active">Todos</li>
                    <li data-filter=".filter-Pedestre">Pedestres</li>
                    <li data-filter=".filter-Bicicleta">Bicicletas</li>
                    <li data-filter=".filter-OffRoad">Off-Road</li>
                    <li data-filter=".filter-Urbano">Urbanos</li>
                </ul>
            </div>
        </div>

        <div class="row portfolio-container">


            @foreach (var item2 in ViewBag.dadosTrilhos)
            {
                <div class="col-lg-4 col-md-6 portfolio-item filter-@item2.TipoTrilho">
                    <div style="height: 300px; width:300px;" class="portfolio-wrap">

                        @if (item2.Photo != null)
                        {
                        <img style="height: 100%; width:100%;" class="img-responsive full-width" src="data:image/jpeg;base64,@Convert.ToBase64String(item2.Photo)" />
                        }
                        else { 
                        <img  style="height: 100%; width:100%;" class="img-responsive full-width" src="/assets/img/1.PNG" />
                        }

                        <div class="portfolio-info">
                            <h4>@item2.Nome</h4>
                            <p>@item2.Distancia Kms</p>
                            <div class="portfolio-links">

                                <a href="portfolio-details.html" title="Mais Detalhes"><i class="icofont-external-link"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>