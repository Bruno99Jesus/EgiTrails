                @Html.DisplayFor(modelItem => item.NPessoas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoVeiculo)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.Estado)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.DataEstado)
            </th>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ReservasId">Edit</a> |
