@model EgiTrails.Models.Reservas

@{
    ViewData["Title"] = "Create";
}

<h1>Efetuar uma Reserva</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telemovel" class="control-label">Telemóvel</label>
                <input asp-for="Telemovel" class="form-control" />
                <span asp-validation-for="Telemovel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label">Data</label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NPessoas" class="control-label">Nº de Pessoas</label>
                <input asp-for="NPessoas" type="number" class="form-control" id="numerodepessoas" placeholder="Número de pessoas">
                <span asp-validation-for="NPessoas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoVeiculo" class="control-label">Tipo de Veículo</label>
                <select asp-for="TipoVeiculo" class="form-control" required>
                    <option value="">Escolha o tipo de veículo</option>
                    <option>Urbano</option>
                    <option>Off-Road</option>
                    <option>Bicicleta</option>
                    <option>Não pretendo veículo</option>
                </select>

                <span asp-validation-for="TipoVeiculo" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Efetuar Reserva" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retroceder</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
