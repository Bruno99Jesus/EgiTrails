@model EgiTrails.Models.Trilhos

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Trilhos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
