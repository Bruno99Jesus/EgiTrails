                    <option>Off-Road</option>
                </select>
                <span asp-validation-for="TipoTrilho" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trajeto" class="control-label"></label>
                <input asp-for="Trajeto" class="form-control" />
                <span asp-validation-for="Trajeto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Distancia" class="control-label"></label>
                <input asp-for="Distancia" class="form-control" />
                <span asp-validation-for="Distancia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocIni" class="control-label"></label>
                <input asp-for="LocIni" class="form-control" />
                <span asp-validation-for="LocIni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocInter" class="control-label"></label>
                <input asp-for="LocInter" class="form-control" />
                <span asp-validation-for="LocInter" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocFim" class="control-label"></label>
                <input asp-for="LocFim" class="form-control" />
                <span asp-validation-for="LocFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LimMaxPes" class="control-label"></label>
                <input asp-for="LimMaxPes" class="form-control" />
                <span asp-validation-for="LimMaxPes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
