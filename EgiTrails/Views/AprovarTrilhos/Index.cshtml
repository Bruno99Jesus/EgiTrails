@model IEnumerable<EgiTrails.Models.Trilhos>

@{
    ViewData["Title"] = "Index";
}

<h1>Aprovar Trilhos</h1>

<p>
    <a asp-action="Create" type="button" class="btn btn-primary" style="margin-bottom:30px">Adicionar Trilho</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoTrilho)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trajeto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Distancia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocIni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocInter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocFim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LimMaxPes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoTrilho)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoTrilho)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trajeto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distancia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocIni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocInter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocFim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LimMaxPes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoTrilho)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TrilhosId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.TrilhosId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.TrilhosId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
